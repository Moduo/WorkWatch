<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_margin="12dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_category_img_placeholder" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:layout_marginRight="12dip"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="TextViewddddddddddddddddddddddddddddd"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-11dip">

            <TextView
                android:id="@+id/watches_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/category_title"
                android:text="Watches: 6"
                android:layout_marginRight="30dip"
                android:textColor="#999" />
            <TextView
                android:id="@+id/watches_running"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dip"
                android:layout_below="@id/category_title"
                android:text="Running: 3"
                android:textColor="#999" />
            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="3:24:30"
                android:textColor="#999" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
